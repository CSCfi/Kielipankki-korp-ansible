# Install in /etc/iptables

# CSC Espoo and Cisco VPN, PaloAltoVPN
-I INPUT -m tcp -p tcp -s 193.166.1.0/24,193.166.2.0/24,193.166.84.0/24,193.166.85.0/24,193.166.83.192/28 --dport 22 -j ACCEPT -m comment --comment "Allow SSH"

# rules for HTTP(S)
-I INPUT -p tcp -m tcp --dport 443 -m comment --comment "Allow https from everywhere" -j ACCEPT
-I INPUT -p tcp -m tcp --dport 80 -m comment --comment "Allow http from everywhere" -j ACCEPT

# rules for Nagios
-I INPUT -p tcp -m tcp -s 193.167.254.68 --dport 5666 -m comment --comment "Allow nagios" -j ACCEPT

# set policies
-P INPUT DROP
-P FORWARD DROP
-P OUTPUT ACCEPT

COMMIT
